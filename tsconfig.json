{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@validators/*": [
        "src/app/validators/*"
      ],
      "@constants/*": [
        "src/app/constants/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@common/*": [
        "src/app/pages/common/*"
      ],
      "@page/*": [
        "src/app/pages/*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  }
}
